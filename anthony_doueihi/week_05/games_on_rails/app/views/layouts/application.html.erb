<!DOCTYPE html>
<html>
  <head>
    <title>GamesOnRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <header>
        <nav>
          <%=  link_to 'Home', home_path %>
          <%=  link_to 'Magic 8 Ball', magic8ball_path %>
          <%=  link_to 'Secret Number', secretnumber_path %>
          <%=  link_to 'Rock Paper Scissors', rock_paper_scissors_path %>
        </nav>
      </header>
      <%= yield %>

    </div>
  </body>
</html>
