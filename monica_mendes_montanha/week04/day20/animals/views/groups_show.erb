<h2><%= @group.name %></h2>
<% unless @group.animals.empty? %>
  <h3>Associated Animals</h3>
  <ul>
    <% @group.animals.each do |animal| %>
      <li>
        <a href="/animals/<%= animal.id %>">
          <%= animal.name %>
        </a>
      </li>
    <% end %>
  </ul>
<% end %>


<div class="controls">
  <a href="/groups/<%= @group.id %>/edit">Edit</a>
  <a href="/groups/<%= @group.id %>/delete">Delete</a>
</div>
